<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.lakeel.altla.sample.tango.planedetection.MainFragment">

    <org.rajawali3d.view.SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:frameRate="60"
            app:renderMode="RENDER_WHEN_DIRTY"/>

    <com.google.atap.tango.ux.TangoUxLayout
            android:id="@+id/layout_tango_ux"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>
